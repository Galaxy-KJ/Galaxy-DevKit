{
  "compilerOptions": {
    "target": "ES2020",

    // node16 requires module: "Node16" (capital N) — they're a matched pair.
    "module": "Node16",
    "moduleResolution": "node16",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "types": ["jest", "node"],

    // rootDir must be set when outDir is set.
    // Because tests/ is in include, the common root is "." not "./src".
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true

    // baseUrl removed — deprecated in TS 5+, not needed here.
    // Use rootDir + paths if you need module aliasing.
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}