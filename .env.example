# Galaxy DevKit Environment Variables
# Copy this file to .env.local and update the values

# Supabase Configuration (Local Development)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your_anon_key_from_supabase_status
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_from_supabase_status

# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_FRIENDBOT_URL=https://friendbot.stellar.org

# For mainnet (production)
# STELLAR_NETWORK=mainnet
# STELLAR_HORIZON_URL=https://horizon.stellar.org

# Database Configuration (Local)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# API Configuration
API_PORT=3000
API_HOST=localhost

# CLI Configuration
CLI_DEBUG=false
CLI_VERBOSE=false

# Development
NODE_ENV=development
LOG_LEVEL=info


# REST API Configuration
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# API Key Configuration
API_KEY_LENGTH=32
API_KEY_PREFIX_LENGTH=8

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_API_KEY_MAX=1000
RATE_LIMIT_IP_MAX=20

# Session Configuration
SESSION_EXPIRY=3600
SESSION_REFRESH_EXPIRY=604800
SESSION_CLEANUP_INTERVAL=3600000

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
# Optional: External Services
# SENDGRID_API_KEY=your_sendgrid_key
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
